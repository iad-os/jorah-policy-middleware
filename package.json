{
  "name": "@iad-os/jorah-policy-middleware",
  "version": "0.0.5",
  "description": "Open Policy Agent Middleware",
  "maintainers": [
    {
      "name": "Daniele Fiungo",
      "email": "daniele.fiungo@iad2.it"
    },
    {
      "name": "Nicola Vurchio",
      "email": "nicola.vurchio@iad2.it"
    }
  ],
  "author": "Daniele Fiungo <daniele.fiungo@iad2.it>",
  "keywords": [
    "node",
    "middlewares"
  ],
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iad-os/jorah-policy-middleware.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/__test__/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^26.0.15",
    "@types/lodash.merge": "^4.6.6",
    "@types/lodash.reduce": "^4.6.6",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "axios": "^0.21.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-pino-logger": "^5.0.0",
    "http-status": "^1.5.0",
    "lodash.merge": "^4.6.2",
    "lodash.reduce": "^4.6.0",
    "query-string": "^6.13.7"
  }
}
